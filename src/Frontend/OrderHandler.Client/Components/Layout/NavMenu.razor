@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">OrderHandler</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
       <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin, User">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="products">
                        <Icon IconSize="IconSize.Large" Name="IconName.Mouse" AriaHidden="true" Margin="Margin.Is2.FromEnd"></Icon> Products
                    </NavLink>
                </div>
                
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="store/products">
                        <Icon IconSize="IconSize.Large" Name="IconName.Store" AriaHidden="true" Margin="Margin.Is2.FromEnd"></Icon> Store
                    </NavLink>
                </div>
                
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/user/MyProfile">
                        <Icon IconSize="IconSize.Large" Name="IconName.Fingerprint" AriaHidden="true" Margin="Margin.Is2.FromEnd"></Icon> My profile
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
       
        <AuthorizeView Roles="Admin">
            <Authorized>
                <br />
                <div class="nav-item px-3">
                    <h6 style="color:white;"> Admin</h6>
                </div>
               
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="orders">
                        <Icon IconSize="IconSize.Large" Name="IconName.History" AriaHidden="true" Margin="Margin.Is2.FromEnd"></Icon> Order management
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <Icon IconSize="IconSize.Large" Name="IconName.Users" AriaHidden="true" Margin="Margin.Is2.FromEnd"></Icon> User management
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/product_management/productOverView">
                        <Icon IconSize="IconSize.Large" Name="IconName.Edit" AriaHidden="true" Margin="Margin.Is2.FromEnd"></Icon> Product management
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

